    <h1>Gerenciamentode estudantes</h1>
    <h2>Lista de alunos</h2>
    <ul id="alunos">
    </ul>

    <form id="faluno">
        <h2>Adicionar novo aluno</h2>    
        <input type="hidden" name="id" id="tid">
        <label for="nome">Nome:</label>
        <input type="text" id="tnome" name="nome"/>
        
        <br><br>
        <label for="idade">Idade:</label>
        <input type="number" id="tidade" name="idade"/>

        <br><br>
        <input type="submit" value="Salvar" class="btn-primary"/>
        <br><br>
        <button id="logout" class="btn btn-link">Deslogar</button>
    </form>

    <form id="flogin">
      <h2>Login</h2>
      <p>
        <label for="user">Usuario:</label>
        <input type="text" name="user" id="user">
      </p>
      <p>
        <label for="password">Senha:</label>
        <input type="password" name="password" id="password">
      </p>
      <button id="buser" class="btn-primary">Logar</button>
      <button id="badmin" class="btn-primary">Logar como Admin</button>
      </form>

